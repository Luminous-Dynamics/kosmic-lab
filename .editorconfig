# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# reStructuredText files
[*.rst]
indent_style = space
indent_size = 3
max_line_length = 100

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2

# Configuration files
[*.{cfg,ini,conf}]
indent_style = space
indent_size = 2

# Web files
[*.{html,css,js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# XML files
[*.{xml,svg}]
indent_style = space
indent_size = 2

# Ignore generated and dependency files
[{package-lock.json,yarn.lock,poetry.lock}]
indent_style = unset
indent_size = unset
