{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ArchiveMetadata",
  "type": "object",
  "required": ["timestamp", "bundle", "files"],
  "properties": {
    "timestamp": { "type": "string" },
    "bundle": { "type": "string" },
    "config_label": { "type": "string" },
    "config_notes": { "type": "string" },
    "files": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "required": ["name", "hash"],
          "properties": {
            "name": { "type": "string" },
            "hash": { "type": "string" }
          }
        }
      }
    }
  }
}
