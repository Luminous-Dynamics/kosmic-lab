# Kosmic Lab Environment Configuration
# Copy this file to .env and update with your values
# IMPORTANT: Never commit .env file to version control!

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable colored console output (true/false)
LOG_COLORED=true

# Log file path (optional, leave empty for console only)
LOG_FILE=

# =============================================================================
# Experiment Configuration
# =============================================================================

# Default number of random seeds for experiments
DEFAULT_N_SEEDS=3

# Default number of simulation timesteps
DEFAULT_TIMESTEPS=100

# Output directory for experiment logs
LOG_DIR=logs

# Output directory for experiment data
DATA_DIR=data

# =============================================================================
# Performance Configuration
# =============================================================================

# Number of CPU cores to use for parallel processing (0 = auto-detect)
N_CORES=0

# Enable GPU acceleration if available (true/false)
USE_GPU=false

# Memory limit for large datasets (in GB)
MEMORY_LIMIT_GB=8

# =============================================================================
# Dashboard Configuration
# =============================================================================

# Dashboard port
DASHBOARD_PORT=8050

# Dashboard host (0.0.0.0 for external access, 127.0.0.1 for localhost only)
DASHBOARD_HOST=127.0.0.1

# Enable dashboard debug mode (true/false)
DASHBOARD_DEBUG=false

# =============================================================================
# Reproducibility
# =============================================================================

# Default random seed for reproducibility
DEFAULT_SEED=42

# Git SHA tracking (auto/manual/disabled)
GIT_SHA_TRACKING=auto

# =============================================================================
# External Services (Optional)
# =============================================================================

# Holochain Configuration (if using Mycelix integration)
HOLOCHAIN_CONDUCTOR_URL=

# API Keys (if needed for external services)
API_KEY=

# Database URL (if using database backend)
DATABASE_URL=

# =============================================================================
# Development Settings
# =============================================================================

# Python optimize level (0=debug, 1=remove asserts, 2=remove docstrings)
PYTHONOPTIMIZE=0

# Show Python warnings (true/false)
PYTHONWARNINGS=default

# Python unbuffered output (true/false) - useful for Docker
PYTHONUNBUFFERED=true

# =============================================================================
# Testing Configuration
# =============================================================================

# Pytest verbosity level (0-2)
PYTEST_VERBOSITY=1

# Run slow tests (true/false)
RUN_SLOW_TESTS=false

# Run integration tests (true/false)
RUN_INTEGRATION_TESTS=true

# =============================================================================
# Documentation Configuration
# =============================================================================

# Sphinx build directory
DOCS_BUILD_DIR=docs/_build

# Documentation port for local server
DOCS_PORT=8000

# =============================================================================
# Notes
# =============================================================================

# This file serves as a template for environment variables.
# To use it:
#   1. Copy to .env: cp .env.example .env
#   2. Update values as needed
#   3. Never commit .env to version control (it's in .gitignore)
#
# Loading .env in Python:
#   from dotenv import load_dotenv
#   load_dotenv()
#   import os
#   log_level = os.getenv('LOG_LEVEL', 'INFO')
#
# Or use in shell:
#   export $(cat .env | xargs)
